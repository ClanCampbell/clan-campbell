<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="export_jar" name="Create runnable jar for avi.copy">

	<target name="export_jar">
		<jar destfile="AVICopy.jar" filesetmanifest="mergewithoutmain" filesonly="true">
			<manifest>
				<attribute name="Main-Class" value="avi.copy.Main" />
				<attribute name="Class-Path" value="." />
			</manifest>
			<fileset dir="bin" />
			<zipfileset excludes="META-INF/*.SF" src="${eclipse.home}/plugins/org.eclipse.swt_3.7.2.v3740f.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${eclipse.home}/plugins/org.eclipse.swt.win32.win32.x86_64_3.7.2.v3740f.jar" />
		</jar>
	</target>

</project>
